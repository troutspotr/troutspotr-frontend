{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-sonarts",
    "tslint-immutable",
    "tslint-config-prettier"
  ],
  "rules": {
    "ban": false,
    "class-name": true,
    "cognitive-complexity": [true, 15],
    "comment-format": [true, "check-space"],
    "curly": true,
    "forin": true,
    "interface-name": [true, "always-prefix"],
    "jsdoc-format": true,
    "jsx-no-lambda": true,
    "jsx-no-multiline-js": true,
    "label-position": true,
    "object-literal-sort-keys": false,
    "no-var-requires": false,
    "no-identical-functions": true,
    "max-file-line-count": [true, 200],
    "mccabe-complexity": [true, 15],
    "ordered-imports": true,
    "member-ordering": [
      false,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "public-constructor",
          "private-static-field",
          "private-instance-field",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "missing-jsdoc": false,
    "no-accessor-field-mismatch": true,
    "member-access": true,
    "no-any": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [true, "log", "error", "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "jsx-boolean-value": true,
    "no-eval": true,
    "no-let": true,
    "no-method-signature": true,
    "no-object-mutation": false,
    "no-parameter-reassignment": true,
    "no-redundant-parentheses": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-useless-cast": true,
    "no-var-keyword": true,
    "radix": true,
    "readonly-array": [false, "ignore-local"],
    "readonly-keyword": [false, "ignore-local"],
    "switch-default": true,
    "ter-arrow-parens": false,
    "no-default-export": false,
    "trailing-comma": [false],
    "no-all-duplicated-branches": false,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [false, "parameter", "property-declaration"],
    "use-type-alias": true,
    "max-classes-per-file": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "react-tsx-curly-spacing": false,
    "no-relative-imports": false,
    "no-import-side-effect": [true, { "ignore-module": "(\\.html|\\.css|\\.scss)$" }]
  }
}
